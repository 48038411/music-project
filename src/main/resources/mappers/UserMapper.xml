<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft1851.music.mapper.UserMapper">
    <!--  根据用户名查询  -->
    <select id="findByUserName" resultType="User" parameterType="User">
        SELECT * FROM t_user WHERE name = #{name}
    </select>

    <!-- 新增用户   -->
    <insert id="addUser" parameterType="User">
        INSERT INTO
            t_user(id, name, password, salt, email, phone_number, status, binding, credits, create_time, last_login_time)
            VALUES (#{id},#{name},#{password},#{salt},#{email},#{phoneNumber},#{status},#{binding},#{credits},#{createTime},
                    #{lastLoginTime})
    </insert>
    
    <resultMap id="userMap" type="User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="musics" ofType="Music">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="author" property="author"/>
            <result column="img" property="img" />
        </collection>
    </resultMap>
    <select id="getMusicById" parameterType="int" resultMap="userMap">
        SELECT u.id,
               u.name,
               m.id,
               m.name,
               m.author,
               m.img
        FROM t_user u
                LEFT JOIN t_user_music um ON u.id = um.user_id
                LEFT JOIN music m ON um.music_id= m.id
        WHERE um.user_id=#{id}
    </select>
</mapper>